# Azure AI Search Configuration - Copy this file to .env and fill in your values
AZURE_SEARCH_ENDPOINT=your_azure_search_endpoint_here
AZURE_SEARCH_KEY=your_azure_search_admin_key_here # Use the ADMIN key for indexing
AZURE_SEARCH_INDEX_NAME=your_azure_search_index_name_here
AZURE_SEARCH_CONTENT_FIELD=content # Field containing the document content
AZURE_SEARCH_VECTOR_FIELD=embedding # Field containing the vector embeddings
# AZURE_SEARCH_SEMANTIC_CONFIGURATION_NAME=default # Optional: Semantic configuration name if used

# Azure OpenAI Configuration
AZURE_OPENAI_API_ENDPOINT=your_azure_openai_api_endpoint_here
AZURE_API_KEY=your_azure_openai_api_key_here
AZURE_EMBEDDING_DEPLOYMENT_NAME=your_azure_openai_embedding_deployment_name_here # Deployment for embeddings model

# Optional: Azure OpenAI Configuration for Chat (if different from embedding service)
# AZURE_RESOURCE_NAME=your_azure_openai_resource_name_here # Resource name (often part of endpoint)
# AZURE_DEPLOYMENT_NAME=your_azure_openai_chat_deployment_name_here # Deployment for chat model (e.g., gpt-4)
